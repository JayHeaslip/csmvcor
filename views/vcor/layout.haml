!!! 5
%html
  %head 
    %title Vermont Center for Occupational Rehabilitation
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link(href='http://fonts.googleapis.com/css?family=Open+Sans|Roboto+Condensed' rel='stylesheet' type='text/css')
    %link{href: "/stylesheets/bootstrap.min.css", rel: "stylesheet"}
    %link{href: "/stylesheets/vcor.css", rel: "stylesheet"}
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Le styles
    %script{type: "text/javascript", src: "https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"}
    %script{type: "text/javascript", src: "https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{type: "text/javascript", src: "/javascripts/bootstrap.min.js"}
    %script{type: "text/javascript", src: "/javascripts/nod.min.js"}
    %body
    .navbar.navbar-default{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span{class: "sr-only"} Toggle navigation
            %span{class: "icon-bar"}
            %span{class: "icon-bar"}
            %span{class: "icon-bar"}
          %a{class: "navbar-brand", href: "/vcor"} VCOR
        -# Collect the nav links, forms, and other content for toggling
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li{:class => @submenu == 'directions' && "active"}
              %a{href: "/vcor/directions"} Directions
            %li{:class => @submenu == 'contact' && "active"}
              %a{href: "/vcor/contact"} Contact
            %li{:class => @submenu == 'services' && "active"}
              %a{href: "/vcor/services"} Treatments
            %li{:class => @submenu == 'staff' && "active"}
              %a{href: "/vcor/staff"} Staff
            %li{:class => @submenu == 'patients' && "active"}
              %a{href: "/vcor/patients"} Patients
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Forms 
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{href: "/vcor/render_form/new_patient_information.pdf"} New Patient Information
                %li
                  %a{href: "/vcor/render_form/new_patient_referral.pdf"} New Patient Referral
                %li
                  %a{href: "/vcor/render_form/new_patient_history.pdf"} New Patient History
                %li#rackcard
                  %a{href: "#", :'data-toggle' => "modal"} Primary Care Provider Information
            %li.dropdown{:class => @submenu == 'articles' && "active"}
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Articles
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{href: "/vcor/articles/pt"} Physical Therapy
                %li
                  %a{href: "/vcor/articles/massage"} Massage Therapy
                %li
                  %a{href: "/vcor/articles/om"} Osteopathic Medicine
                %li
                  %a{href: "/vcor/articles/pool"} Pool Therapy
                %li
                  %a{href: "/vcor/articles/nutrition"} Nutrition
                %li
                  %a{href: "/vcor/articles/lifestyle"} Lifestyle
            %li{:class => @submenu == 'faq' && "active"}
              %a{href: "/vcor/faq"} FAQ
    .container
      .jumbotron#head
        %img{:src => "/images/vcor.jpeg"}
        %h2#inl{style: "margin-left: 15px"}Vermont Center for Occupational Rehabilitation
        %div
          %h3.pull-left.text-center John Johansson, D.O.
          %address.pull-right
            %br/
            67 Lincoln Street
            %br/
            Essex Junction, Vermont   05452
            %br/
            Phone: 802-878-9700&nbsp;&nbsp;&nbsp;Fax: 802-878-9966
            %br/
            Hours: Mon-Fri: 8:00am-4:30pm
      - if @flash_info
        .alert.alert-success
          = @flash_info
      - if @flash_error
        .alert.alert-danger
          = @flash_error
      .row.marketing
        .col-md-12
          = yield
      #myModal.modal{"aria-hidden" => "true", style: "display: none;"}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
            .modal-body{style: "width: 832px"}
              %img{src: "/images/rack_card_front.jpg", style: "float:left;"}/
              %img{src: "/images/rack_card_back.jpg", style: "float:left;"}/
            .modal-footer
      :javascript
        $(document).ready(function() {
          $('#rackcard').click(function(){
            $('#myModal').modal({show:true})
          });
        });

