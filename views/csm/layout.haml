!!! 5
%html
  %head 
    %title Champlain Sports Medicine
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link(href='http://fonts.googleapis.com/css?family=Open+Sans|Roboto+Condensed' rel='stylesheet' type='text/css')
    %link{href: "/stylesheets/bootstrap.min.css", rel: "stylesheet"}
    %link{href: "/stylesheets/vcor.css", rel: "stylesheet"}
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Le styles
    %script{type: "text/javascript", src: "https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"}
    %script{type: "text/javascript", src: "https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{type: "text/javascript", src: "/javascripts/bootstrap.min.js"}
    %script{type: "text/javascript", src: "/javascripts/nod.min.js"}
    %body
    .navbar.navbar-default{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span{class: "sr-only"} Toggle navigation
            %span{class: "icon-bar"}
            %span{class: "icon-bar"}
            %span{class: "icon-bar"}
          %a{class: "navbar-brand", href: "/csm"} Champlain Sports Medicine
        -# Collect the nav links, forms, and other content for toggling
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
    .container
      .jumbotron#head
        %img{:src => "/images/vcor.jpeg"}
        %h2#inl{style: "margin-left: 15px"}Champlain Sports Medicine
        %div
          %h3.pull-left.text-center John Johansson, D.O.
          %address.pull-right
            %br/
            67 Lincoln Street
            %br/
            Essex Junction, Vermont   05452
            %br/
            Phone: 802-878-1003
            %br/
            Hours: Mon-Fri: 8:00am-4:30pm
      - if @flash_info
        .alert.alert-success
          = @flash_info
      - if @flash_error
        .alert.alert-danger
          = @flash_error
      .row.marketing
        .col-md-12
          = yield

